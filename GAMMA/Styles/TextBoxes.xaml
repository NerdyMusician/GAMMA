<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:GAMMA.CustomControls">

    <Style TargetType="TextBox" x:Key="PartialBorderTextBox">
        <Setter Property="Height" Value="24" />
        <Setter Property="Width" Value="240" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryFontColor}" />
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryFontColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorder}" />
        <Setter Property="BorderThickness" Value="2 0 0 2" />
        <Setter Property="Padding" Value="2 2 0 0" />
        <Setter Property="Margin" Value="0 0 0 0" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>
    <Style TargetType="TextBox" x:Key="TallPartialBorderTextBox" BasedOn="{StaticResource PartialBorderTextBox}">
        <Setter Property="Height" Value="48" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="BorderThickness" Value="0 2" />
        <Setter Property="VerticalScrollBarVisibility" Value="Visible" />
    </Style>

</ResourceDictionary>