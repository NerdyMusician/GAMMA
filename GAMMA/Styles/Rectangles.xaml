<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Rectangle" x:Key="VerticalDivider">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Width" Value="2" />
        <Setter Property="Margin" Value="2 0 2 0" />
        <Setter Property="Stroke" Value="{StaticResource ButtonBorder}" />
    </Style>
    <Style TargetType="Rectangle" x:Key="HorizontalDivider">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Height" Value="2" />
        <Setter Property="Margin" Value="0 2" />
        <Setter Property="Stroke" Value="{StaticResource ButtonBorder}" />
    </Style>
    <Style TargetType="Rectangle" x:Key="HorizontalDivider_Tooltip" BasedOn="{StaticResource HorizontalDivider}">
        <Setter Property="Stroke" Value="DarkSlateGray" />
    </Style>
    
</ResourceDictionary>