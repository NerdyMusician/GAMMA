                                    <Image Style="{StaticResource Icon_Info}" />
                                    <cc:FieldLabel Width="400" TextWrapping="Wrap"><Run Text="WebDriver Status: " /><Run Text=" "/><Run Text="{Binding SettingsView.WebDriverStatus}" /></cc:FieldLabel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <cc:ImageButton Text="Open Roll20" ImageResource="{StaticResource Icon_D20}" Command="{Binding OpenWebDriver}" />
                                    <cc:ImageButton Text="Reset WebDriver" ImageResource="{StaticResource Icon_Refresh}" Command="{Binding ResetDriver}" />
                                    <cc:ImageButton Text="Get WebDriver" ImageResource="{StaticResource Icon_Import}" Command="{Binding GetDriver}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Separator />
                                    <Image Style="{StaticResource Icon_Warning}" />
                                    <cc:FieldLabel Text="Stored as plain text." FontStyle="Italic" />
                                </StackPanel>
                                <Separator />
                                <StackPanel Orientation="Horizontal">
                                    <cc:FieldLabel Text="Email" Width="76" />
                                    <cc:GammaTextBox Text="{Binding SettingsView.Roll20Email, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <Separator />
                                <StackPanel Orientation="Horizontal">
                                    <cc:FieldLabel Text="Password" Width="76" />
                                    <cc:GammaTextBox x:Name="TBX_R20Pass"  Text="{Binding SettingsView.Roll20Password, UpdateSourceTrigger=PropertyChanged}" KeyDown="TBX_R20Pass_KeyDown" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Separator Width="82" />
                                    <CheckBox IsChecked="{Binding SettingsView.ClearPasswordOnClose, UpdateSourceTrigger=PropertyChanged}" Margin="0" />
                                    <cc:FieldLabel Text="Clear Password on Close" Width="160" />
                                </StackPanel>
                                <Separator />
                                <DockPanel>
                                    <cc:FieldLabel Text="Game and Character Selection" Width="auto" />
                                    <cc:IconButton ImageResource="{StaticResource Icon_Plus_Green}" Command="{Binding SettingsView.AddGameCharacterPair}" HorizontalAlignment="Right" />
                                </DockPanel>
                                <Border Style="{StaticResource ListBorder}">
                                    <ScrollViewer Height="128" Width="460">
                                        <ItemsControl ItemsSource="{Binding SettingsView.Roll20GameCharacterList}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <CheckBox IsChecked="{Binding IsSelected}" />
                                                        <Separator />
                                                        <Image Style="{StaticResource Icon_Gamepad}" />
                                                        <Separator />
                                                        <cc:GammaTextBox Text="{Binding Game}" Width="192" />
                                                        <Separator />
                                                        <Image Style="{StaticResource Icon_Users}" />
                                                        <Separator />
                                                        <cc:GammaTextBox Text="{Binding Character}" Width="148" />
                                                        <Separator />
                                                        <cc:MiniButton ImageResource="{StaticResource Icon_X}" Command="{Binding RemovePair}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="About GAMMA">
                            <StackPanel Margin="8 4">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/gammabluewash.ico" Height="64" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding ApplicationVersion, FallbackValue=GAMMA 1.00.00}" FontSize="24" Margin="8 0" Width="auto" />
                                        <TextBlock Text="Game and Monster" FontSize="14" Margin="8 -2" Width="auto" />
                                        <TextBlock Text="Management Application" FontSize="14" Margin="8 -2" Width="auto" />
                                    </StackPanel>
                                </StackPanel>
                                
                                <Separator Height="8" />
                                <TextBlock Text="Credits" />
                                <Rectangle />
                                <StackPanel Orientation="Horizontal">
                                    <Image Style="{StaticResource Icon_ScreenOff}" />
                                    <Separator />
                                    <TextBlock Text="Developed by JJF © 2021" Width="auto" Margin="0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Style="{StaticResource Icon_RubberDuck}" />
                                    <Separator />
                                    <TextBlock Text="Rubber ducking by Milo the Cat" Width="auto" Margin="0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Style="{StaticResource Icon_Pass}" />
                                    <Separator />
                                    <TextBlock Text="Additional testing by TJCR, SAW, JJD, SLG, BLR, TBW" Width="auto" Margin="0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Style="{StaticResource Icon_Patreon}" />
                                    <Separator />
                                    <TextBlock Text="Special thanks to current and future patrons" Width="auto" Margin="0" />
                                </StackPanel>

                                <Separator Height="8" />
                                <TextBlock Text="Documentation" />
                                <Rectangle />
                                <cc:ImageButton ImageResource="{StaticResource Icon_Book}" Text="View User Manual" Width="148" Command="{Binding SettingsView.ViewFile}" CommandParameter="Documentation" />
                                <cc:ImageButton ImageResource="{StaticResource Icon_Note}" Text="View Change Log" Width="148" Command="{Binding SettingsView.ViewFile}" CommandParameter="Change Log" />

                                <Separator Height="8" />
                                <TextBlock Text="Other Resources" />
                                <Rectangle />
                                <cc:ImageButton ImageResource="{StaticResource Icon_Patreon}" Text="Visit on Patreon" Width="148" Command="{Binding SettingsView.ViewFile}" CommandParameter="Patreon" />
                                <cc:ImageButton ImageResource="{StaticResource Icon_Reddit}" Text="Visit on Reddit" Width="148" Command="{Binding SettingsView.ViewFile}" CommandParameter="Reddit" />

                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
